@model GraduationProject.ViewModels.Account.LoginViewModel;

@{
    Layout = "";
    ViewBag.Title = "تسجيل الدخول";

}
<html dir="rtl" lang="ar">
<head>
    <meta charset="utf-8" />
    <title>تسجيل الدخول</title>
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
    <link href="~/css/Login.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
    <img class="wave" src="img/darkblue-wave.png">
    <div class="container">
        <div class="login-content">
            <form method="post">
                <img class="logo" src="img/KALASTORDER_Logo.gif">
                <div asp-validation-summary="ModelOnly" class="serverresponce"></div>
                <div class="input-div one">
                    <div class="i">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="div">
                        <h5>البريد الإلكتروني</h5>
                        <input asp-for="Email" id="email" class="input">
                    </div>
                </div>
                <span asp-validation-for="Email" class="err"></span>
                <div class="input-div pass">
                    <div class="i">
                        <i onclick="visibilPassword()" class="fas fa-lock"></i>
                    </div>
                    <div class="div">
                        <h5>كلمة السر</h5>
                        <input asp-for="Password" class="input" id="passwordInput" type="password">
                    </div>
                </div>
                <span asp-validation-for="Password" class="err"></span>
                <button type="submit" class="btn" style="margin-top:20px">
                    تسجيل الدخول
                    <i class='fas fa-sign-in-alt' style="text-align:start;margin-right:10px;"></i>

                </button>
            </form>
        </div>
        <div class="img">
            <img src="img/Warwhouse-animated-img.gif">
        </div>
    </div>
</body>
</html>
<script src="~/js/Login.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validate/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<script>
    $(document).ready(function () {
        var email = document.getElementById("email");
        console.log(email.value);
        if (email.value != "") {
            email.value = "";
        }
    });

    function visibilPassword() {
        var passwordInput = document.getElementById("passwordInput");
        if (passwordInput.type === "password") {
            passwordInput.type = "text";
        } else {
            passwordInput.type = "password";
        }
    }
</script>