@model GraduationProject.ViewModels.Account.LoginViewModel;

@{ 
    Layout = "";
}

    <link href="~/css/loginPage.css" rel="stylesheet" />
    <!--<img class="wave" src="~/serverimages/waveorange.png">-->
    <div class="container" style=" background: #fff;">
        <div class="login-content">
            <form method="post">

                <div asp-validation-summary="ModelOnly" class="serverresponce"></div>
                <div class="input-div one">
                    <div class="i">
                        <i class="fa fa-envelope"></i>
                    </div>

                    <div class="div">

                        <h5>البريد الإلكتروني</h5>

                        <input asp-for="Email" id="email" class="input">
                        <span asp-validation-for="Email" class="err"></span>
                    </div>
                </div>
                <div class="input-div pass">
                    <div class="i">
                        <i onclick="visibilPassword()" class="fas fa-lock"></i>
                    </div>
                    <div class="div">
                        <h5>كلمة السر</h5>
                        <input asp-for="Password" class="input" id="passwordInput" type="password">
                        <span asp-validation-for="Password" class="err"></span>
                    </div>

                </div>
                <button type="submit" class="login-btn" style="margin-top:30px;">
                    <i class='fas fa-sign-in-alt' style="text-align:start"></i>
                    تسجيل الدخول
                </button>


            </form>
        </div>
        <div class="img">
        </div>
    </div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/loginpage1.js"></script>
}
