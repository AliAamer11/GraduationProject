@model GraduationProject.ViewModels.AnnualNeedOrders.CreateAnnualNeedOrderViewModel;

    <link href="~/css/AnnualNeedCreateEditCard.css" rel="stylesheet" />

<h1 class="headingg">إنشاء طلب مادة</h1>
<hr />

<form asp-action="CreateAnnualNeedOrder" method="post">
    <div class="form-container" style=" position: relative; ">
        <div class="col-xs-12 col-sm-12 form-group">
            <div class="row">
                <div class="col-md-12">
                    <label>اسم المادة</label>
                    <select asp-for="ItemId" asp-items="ViewBag.Item" class="form-control"></select>
                    <span asp-validation-for="ItemId" class="text-danger"></span>
                </div>

            </div>
            <br />
            <div class="row">
                <div class="col-md-4">
                    <label>كمية الفصل الأول</label>
                    <input asp-for="FirstSemQuantity" class="form-control" />
                    <span asp-validation-for="FirstSemQuantity" class="text-danger "></span>
                </div>
                <div class="col-md-4">
                    <label> كمية الفصل الثاني</label>
                    <input asp-for="SecondSemQuantity" class="form-control" />
                    <span asp-validation-for="SecondSemQuantity" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label> كمية الفصل الثالث</label>
                    <input asp-for="ThirdSemQuantity" class="form-control" />
                    <span asp-validation-for="ThirdSemQuantity" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-12">
                    <label>توصيف</label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-6">
                    <label>معدل التدفق</label>
                    <input asp-for="FlowRate" class="form-control" />
                    <span asp-validation-for="FlowRate" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label>المعدل التقريبي</label>
                    <input asp-for="ApproxRate" class="form-control" />
                    <span asp-validation-for="ApproxRate" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div>
                <input asp-for="OrderId" value="@ViewBag.OrderId" class="form-control" hidden />
            </div>
            <div class="form-group text-left ">
                <button type="submit" class="btn btn-primary btn-lg btn1">إنشاء<i class="bx bx-add-to-queue mr-3"></i></button>
            </div>

            </div>
        </div>
</form>

    @section Scripts{
        <partial name="_ValidationScriptsPartial" />
    }
