@model IEnumerable<GraduationProject.Data.Models.Order>;

<link href="~/css/tableformanagment.css" rel="stylesheet" />

<h1 class="tableheader">طلبات الإحتياجات السنوية</h1>
<div class="table-responsive">
    <table class="styled-table">
        <thead>
            <tr>
                <th style="padding-left:80px"></th>
                <th>تاريخ التقديم</th>
                <th> تفاصيل</th>
            </tr>
        </thead> 
        
        <tbody>
            @if (Model.Count() != 0)
            {
                @foreach (var x in Model)
                {
                    <tr>
                        <td>@x.OrderID</td>
                        <td>@x.CreatedAt</td>
                        <td> <a asp-action="getAnnualNeedOrders" asp-controller="Archive" asp-route-id="@x.OrderID">تفاصيل</a></td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td></td>
                    <td>لا توجد طلبات احتياجات سنوية حالياَ</td>
                    <td></td>
                </tr>
            }
        </tbody>
        
    </table>
</div>


