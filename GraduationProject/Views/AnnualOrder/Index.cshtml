@model IEnumerable<GraduationProject.Data.Models.Order>

@if (Model.Count() > 0)
{
    @foreach (var x in Model)
    {

        <h1>@x.OrderID</h1>
        <h1>@x.CreatedAt</h1>
        <div>
            <a asp-action="getAnnualNeedOrders" asp-controller="Archive" asp-route-id="@x.OrderID">تفاصيل</a>
        </div>
    }
}
else
{ <h1>لا توجد طلبات احتياجات سنوية حالياَ</h1>}
