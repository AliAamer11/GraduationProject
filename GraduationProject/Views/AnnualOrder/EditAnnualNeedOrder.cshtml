@model GraduationProject.ViewModels.AnnualNeedOrders.EditAnnualNeedOrderViewModel;

    <style>
        .form-container {
            background-color: rgb(31 30 42 / 0.95);
            font-family: 'Titillium Web', sans-serif;
            font-size: 0;
            padding: 30px;
            border-radius: 20px;
            box-shadow: 0 0 25px -15px rgba(0, 0, 0, 0.3);
        }

        .form-container {
            color: #fff;
            font-size: 18px;
            font-weight: 600;
            text-transform: capitalize;
            margin: 0 0 25px;
        }

        .clr {
            background-color: #FF5733;
            border-color: #ec3913;
        }
    </style>

<h1>تعديل طلب مادة</h1>
<hr />
<form asp-action="EditAnnualNeedOrder">
    <input type="hidden" asp-for="AnnualOrderID" />
    <input type="hidden" asp-for="OrderId" />
    <input asp-for="Comment" class="form-control" hidden />

    <div class="form-container">
        <div class="col-xs-12 col-sm-12 form-group">
            <div class="row">
                <div class="col-md-12">
                    <label>اسم المادة</label>
                    <select asp-for="ItemId" asp-items="ViewBag.Item" class="form-control"></select>
                    <span asp-validation-for="ItemId" class="text-danger"></span>
                </div>

            </div>
            <br />
            <div class="row">
                <div class="col-md-4">
                    <label>كمية الفصل الأول</label>
                    <input asp-for="FirstSemQuantity" class="form-control" />
                    <span asp-validation-for="FirstSemQuantity" class="text-danger "></span>
                </div>
                <div class="col-md-4">
                    <label> كمية الفصل الثاني</label>
                    <input asp-for="SecondSemQuantity" class="form-control" />
                    <span asp-validation-for="SecondSemQuantity" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label> كمية الفصل الثالث</label>
                    <input asp-for="ThirdSemQuantity" class="form-control" />
                    <span asp-validation-for="ThirdSemQuantity" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-12">
                    <label>توصيف</label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-6">
                    <label>معدل التدفق</label>
                    <input asp-for="FlowRate" class="form-control" />
                    <span asp-validation-for="FlowRate" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label>المعدل التقريبي</label>
                    <input asp-for="ApproxRate" class="form-control" />
                    <span asp-validation-for="ApproxRate" class="text-danger"></span>
                </div>
            </div>
            <br />

            <div class="form-group">
                <input type="submit" value="تعديل" class="btn btn-primary" />

            </div>

        </div>
                </div>
       
</form>
    

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
