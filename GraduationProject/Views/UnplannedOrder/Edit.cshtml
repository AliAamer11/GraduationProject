@model GraduationProject.ViewModels.UnplannedOrders.EditUnplannedOrderViewModel;

<h1>تعديل طلب مادة</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="UnPlannedOrderID" />
            <input type="hidden" asp-for="OrderId" />

            <div class="form-group">
                <label class="control-label">اسم المادة</label>
                <select asp-for="ItemId" asp-items="ViewBag.Item"></select>
                <span asp-validation-for="ItemId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">كمية المادة</label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
         
            <div class="form-group">
                <label class="control-label"> توصيف</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"> سبب الطلب</label>
                <input asp-for="Reason" class="form-control" />
                <span asp-validation-for="Reason" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="تعديل" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
