@model IEnumerable<GraduationProject.Data.Models.UnPlannedOrder>
@{
    ViewData["Title"] = "الطلبات الغير مخططه";
}

@if (Model.Count() > 0)
{

    <form method="post" asp-action="AddComment" asp-route-id=@Model.First().OrderId>
        <table>
            <thead>
                <tr>
                    <td> المواصفات </td>
                    <td> الكمية</td>
                    <td> السبب </td>
                    <td>  التعليقات </td>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.Description</td>
                        <td>@obj.Quantity</td>
                        <td>@obj.Reason</td>
                        <td><input asp-for="@obj.Comment" value="@obj.Comment" name="comments" /></td>
                        <span asp-validation-for="@obj.Comment" class="text-danger"></span>

                        <td><input type="hidden" value="@obj.OrderId" name="Orderid" /></td>

                    </tr>
                }
            </tbody>
        </table>
        <br />
        <button class="btn btn-outline-danger" type="submit"> إضافة التعليقات وإعادة إرسال الطلب </button>
    </form>

    <br />
    <form method="post" asp-action="ApproveOrder" asp-route-id=@Model.First().OrderId>
        <button class="btn btn-outline-success" type="submit">الموافقة </button>
    </form>
    <br />

        <button class="btn btn-outline-light" type="submit"><a asp-controller="VPOrder" asp-action="Unplanned">العودة إلى الطلبات</a> </button>

}
else
{ <h6>لا يوجد طلبات</h6>}





