@model GraduationProject.ViewModels.Measurements.CreateMeasurementViewModel;
@{
    ViewData["Title"] = "إنشاء قياس";
}

<h1>إنشاء قياس</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            @if (ViewBag.errorMassage != null)
            {
                <h4 class="alert alert-danger">@ViewBag.errorMassage</h4>
            }
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">اسم القياس</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="إنشاء" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
