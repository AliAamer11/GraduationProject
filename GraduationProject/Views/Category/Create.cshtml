@model GraduationProject.ViewModels.Category.CreateCategoryViewModel;
@{
    ViewData["Title"] = "إنشاء صنف";
}

<h1>إنشاء صنف</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            @if (ViewBag.errorMassage != null)
            {
                <h4 class="alert alert-danger">@ViewBag.errorMassage</h4>
            }
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label  class="control-label">اسم الصنف</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">ترميز الصنف</label>
                <input asp-for="ShortcutName" class="form-control" />
                <span asp-validation-for="ShortcutName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label"> الصنف الأساسي</label>
                <select asp-for="MainCategoryId" class="form-control fitcontent" asp-items="ViewBag.MainCategory"></select>
                <span asp-validation-for="MainCategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="إنشاء" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
