@model GraduationProject.ViewModels.Category.EditCategoryViewModel

@{
    ViewData["Title"] = "تعديل الصنف";
}
<link href="~/css/button.css" rel="stylesheet" />
<link href="~/css/createItem.css" rel="stylesheet" />
<div class="container">
    <form id='create-form' asp-action="Create">
        <p id='description' class="header">
            تعديل الصنف
        </p>
        @if (ViewBag.errorMassage != null)
        {
            <h4 class="alert alert-danger">@ViewBag.errorMassage</h4>
        }
        <div class='form-input'>
            <label>اسم الصنف</label>
            <input asp-for="Name" class='form-input-size' />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class='form-input'>
            <label>ترميز الصنف</label>
            <input asp-for="ShortCutName" class='form-input-size' />
            <span asp-validation-for="ShortCutName" class="text-danger"></span>
        </div>
        <div class="form-input">
            <label>الصنف الأساسي</label>
            <select asp-for="MainCategoryId" class="form-input-size" asp-items="ViewBag.MainCategory"></select>
            <span asp-validation-for="MainCategoryId" class="text-danger"></span>

        </div>
        <div class='form-input'>
            <button type='submit' id='submit'>إنشاء صنف<i class="bx bx-add-to-queue mr-3"></i></button>
        </div>
    </form>
</div>



