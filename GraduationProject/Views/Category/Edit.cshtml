@model GraduationProject.ViewModels.Category.EditCategoryViewModel

@{
    ViewData["Title"] = "تعديل الصنف";
}
<link href="~/css/button.css" rel="stylesheet" />
<h1>تعديل الصنف</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            @if (ViewBag.errorMassage != null)
            {
                <h4 class="alert alert-danger">@ViewBag.errorMassage</h4>
            }
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategoryID" />
            <div class="form-group">
                <label class="control-label">اسم الصنف</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">رمز الصنف</label>
                <input asp-for="ShortCutName" class="form-control" />
                <span asp-validation-for="ShortCutName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"> الصنف الرئيسي</label>
                <select asp-for="MainCategoryId" class="form-control" asp-items="ViewBag.MainCategory"></select>
                <span asp-validation-for="MainCategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="تعديل" class="edit-icon-btn" />
            </div>
        </form>
    </div>
</div>


