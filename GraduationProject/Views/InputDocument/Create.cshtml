<style>
    .form-group-material {
        position: relative;
        margin-bottom: 0px !important;
    }
</style>
<section class="forms">
    @if (ViewBag.errorMessage != null)
    {
        <h4 class="alert alert-danger">@ViewBag.errorMessage</h4>
    }
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <form asp-action="Create" class="text-left form-validate">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <br />
                            <div id="addAddMoreDiv"></div>
                            <a id="add_row" class="btn btn-primary float-right"> إضافة عنصر</a>
                            <br />
                            <br />
                            <input type="submit" class="btn btn-primary float-left" value="إنشاء" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    <script>
      $('#add_row').on('click', function () {
        $.ajax({
            url: '@Url.Action("AddMorePartialView", "InputDocument")',
            type: 'GET',
            data: {
            },
            success: function (result) {
                $('#addAddMoreDiv').append(result);
            },
            error: function () {
            }
        });
    });
    </script>
}
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}