@model IEnumerable<GraduationProject.Data.Models.Order>
<link href="~/css/button.css" rel="stylesheet" />
<link href="~/css/tableformanagment.css" rel="stylesheet" />
<h1 class="tableheader">طلبات الإحتياج غير المخططة </h1>
<body>
    @if (Model.Count() > 0)
    {
        <div class="table-responsive">
            <table class="styled-table" id="managmentTable">
                <thead>
                    <tr>
                        <th>الجهة الطالبة</th>
                        <th>تاريخ الطلب</th>
                        <th></th>
                    </tr>

                </thead>
                @foreach (var obj in Model)
                {
                    <tbody>
                        <tr>
                            <td>@obj.User.RequstingParty </td>
                            <td>@obj.CreatedAt.Date.ToString("dd/M/yyyy") </td>
                            <td> <a asp-action="Index" asp-controller="VPUnplannedOrders" asp-route-OrderId="@obj.OrderID">تفاصيل الطلب</a></td>
                        </tr>
                    </tbody>
                }
            </table>
        </div>
    }
    else
    { <h4>لا يوجد طلبات</h4>}
</body>











