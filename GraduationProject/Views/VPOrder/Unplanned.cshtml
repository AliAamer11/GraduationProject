@model IEnumerable<GraduationProject.Data.Models.Order>
<link href="~/css/button.css" rel="stylesheet" />
<link href="~/css/tableformanagment.css" rel="stylesheet" />
<h1 class="tableheader">الطلبات غير المخططة </h1>
<body>
    @if (Model.Count() > 0)
    {
        <div class="table-responsive">
            <table class="styled-table">
                <thead>
                    <tr>
                        <td>تاريخ الطلب</td>
                        <td>نوع الطلب</td>
                        <td>
                        </td>
                    </tr>

                </thead>
                @foreach (var obj in Model)
                {

                    <tbody>
                        <tr>
                            <td>@obj.CreatedAt </td>
                            <td>@obj.Type </td>
                            <td> <a asp-action="Index" asp-controller="VPUnplannedOrders" asp-route-OrderId="@obj.OrderID">تفاصيل الطلب</a></td>

                        </tr>
                    </tbody>
                }
            </table>
            </div>
            }
            else
            { <h1 class="tableheader">لا يوجد طلبات</h1>}
    </body>











